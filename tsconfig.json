{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "abi": ["src/abi"],
      "api": ["src/api"],
      "config": ["src/config"],
      "core": ["src/core"],
      "network": ["src/network"],
      "types": ["src/types"],
      "@": ["src/index"],
      "*": ["src/*"],
      "@/*": ["src/*"]
    },
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true 
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
